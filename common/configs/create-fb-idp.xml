<soapenv:Envelope xmlns:soapenv="http://schemas.xmlsoap.org/soap/envelope/" xmlns:mgt="http://mgt.idp.carbon.wso2.org"
                  xmlns:xsd="http://model.common.application.identity.carbon.wso2.org/xsd">
    <soapenv:Header/>
    <soapenv:Body>
        <mgt:addIdP>
            <!--Optional:-->
            <mgt:identityProvider>
                <!--Optional:-->
                <xsd:alias>https://localhost:9443/oauth2/token</xsd:alias>
                <!--Optional:-->
                <xsd:certificate/>
                <!--Optional:-->
                <xsd:claimConfig>
                    <!--Optional:-->
                    <xsd:alwaysSendMappedLocalSubjectId>false</xsd:alwaysSendMappedLocalSubjectId>
                    <!--Optional:-->
                    <xsd:localClaimDialect>true</xsd:localClaimDialect>
                    <!--Optional:-->
                    <xsd:roleClaimURI>http://wso2.org/claims/role</xsd:roleClaimURI>
                    <!--Optional:-->
                    <xsd:userClaimURI/>
                </xsd:claimConfig>
                <!--Optional:-->
                <xsd:defaultAuthenticatorConfig>
                    <!--Optional:-->
                    <xsd:displayName>FacebookAuthenticator</xsd:displayName>
                    <!--Optional:-->
                    <xsd:enabled>true</xsd:enabled>
                    <!--Optional:-->
                    <xsd:name>FacebookAuthenticator</xsd:name>
                    <!--Zero or more repetitions:-->
                    <xsd:properties>
                        <!--Optional:-->
                        <xsd:name>fbClientId</xsd:name>
                        <!--Optional:-->
                        <xsd:value>${CLIENT_ID}</xsd:value>
                    </xsd:properties>
                    <xsd:properties>
                        <!--Optional:-->
                        <xsd:name>fbClientSecret</xsd:name>
                        <!--Optional:-->
                        <xsd:value>${CLIENT_SECRET}</xsd:value>
                    </xsd:properties>
                    <xsd:properties>
                        <!--Optional:-->
                        <xsd:name>callbackUrl</xsd:name>
                        <!--Optional:-->
                        <xsd:value>https://localhost:9443/commonauth</xsd:value>
                    </xsd:properties>
                </xsd:defaultAuthenticatorConfig>
                <!--Optional:-->
                <xsd:displayName>${DISPLAY_NAME}</xsd:displayName>
                <!--Optional:-->
                <xsd:enable>true</xsd:enable>
                <!--Zero or more repetitions:-->
                <xsd:federatedAuthenticatorConfigs>
                    <!--Optional:-->
                    <xsd:displayName>FacebookAuthenticator</xsd:displayName>
                    <!--Optional:-->
                    <xsd:enabled>true</xsd:enabled>
                    <!--Optional:-->
                    <xsd:name>FacebookAuthenticator</xsd:name>
                    <!--Zero or more repetitions:-->
                    <xsd:properties>
                        <!--Optional:-->
                        <xsd:name>fbClientId</xsd:name>
                        <!--Optional:-->
                        <xsd:value>${CLIENT_ID}</xsd:value>
                    </xsd:properties>
                    <xsd:properties>
                        <!--Optional:-->
                        <xsd:name>fbClientSecret</xsd:name>
                        <!--Optional:-->
                        <xsd:value>${CLIENT_SECRET}</xsd:value>
                    </xsd:properties>
                    <xsd:properties>
                        <!--Optional:-->
                        <xsd:name>fbCallBackUrl</xsd:name>
                        <!--Optional:-->
                        <xsd:value>https://localhost:9443/commonauth</xsd:value>
                    </xsd:properties>
                </xsd:federatedAuthenticatorConfigs>
                <!--Optional:-->
                <xsd:federationHub>false</xsd:federationHub>
                <!--Optional:-->
                <xsd:homeRealmId/>
                <!--Optional:-->
                <xsd:id>?</xsd:id>
                <!--Optional:-->
                <xsd:identityProviderDescription>Facebook Identity Provider</xsd:identityProviderDescription>
                <!--Optional:-->
                <xsd:identityProviderName>${IDP_NAME}</xsd:identityProviderName>
                <!--Optional:-->
                <xsd:permissionAndRoleConfig/>
                <!--Optional:-->
                <xsd:provisioningRole/>
            </mgt:identityProvider>
        </mgt:addIdP>
    </soapenv:Body>
</soapenv:Envelope>
